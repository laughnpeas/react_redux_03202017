{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "noEmitHelpers": false,
        "sourceMap": true,
        "inlineSourceMap": false,
        "suppressImplicitAnyIndexErrors": true,
        "jsx": "react"
    },
    "include": [
        "./src/ts/**/*.ts",
        "./typings/index.d.ts",
        "./node_modules/@types/**/*.ts"
    ],
    "filesGlob": [
        "./typings/index.d.ts"
    ]
}